extends layouts/main-layout.pug

block styles
    link(rel="stylesheet",href="/css/product.css")

block content
    main
    if prods.length > 0
        .grid
            each product in prods
                article.card.product-item
                header.card__header
                h1.product__title #{product.title}
                div.card__image
                    img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_640.png")
                    div.card__content
                        h1.product__price $19.99
                        p.product__description Sample description
                    .card__actions
                        button.btn Add to Card</button>

    else
        h1 No Products yet